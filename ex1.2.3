public class HelloWoeld {

    public static void Interval2D(int N, double min, double max) {
        double[][] a = new double[N][4];
        StdDraw.setXscale(min, max);
        StdDraw.setYscale(min, max);
        StdDraw.setPenRadius(0.01);
        for (int i = 0; i < N; i++) {
            for (int j = 0; j < 4; j++) {
                a[i][j] = StdRandom.uniform(min, max);
                StdOut.printf("%10.7f \t", a[i][j]);
            }
            StdOut.print('\n');
        }
        for (int i = 0; i < N; i++) {
            StdDraw.line(a[i][0], a[i][1], a[i][2], a[i][3]);
        }

    }

    public static void main(String[] args) {
        int N = StdIn.readInt();
        double min = StdIn.readDouble();
        double max = StdIn.readDouble();
        Interval2D(N, min, max);


    }
}
